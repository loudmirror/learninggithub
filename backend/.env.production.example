# ===========================================
# LearningGitHub Backend - Production Config
# ===========================================

# Application Configuration
APP_NAME=LearningGitHub API
APP_VERSION=0.1.0
DEBUG=False

# API Configuration
API_PREFIX=/api

# CORS Configuration
# Replace with your actual frontend domain(s)
CORS_ORIGINS=["https://learninggithub.vercel.app","https://your-domain.com"]

# Logging Configuration
LOG_LEVEL=WARNING

# GitHub API Configuration
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo (read)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_API_BASE_URL=https://api.github.com

# AI Model Configuration
AI_PROVIDER=openai

# 方式一：使用 OpenAI 官方
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# OPENAI_BASE_URL=  (留空使用默认)
# OPENAI_MODEL=gpt-4-turbo-preview

# 方式二：使用 OpenRouter (推荐，支持多种模型)
OPENAI_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4-turbo

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=3600

# ===========================================
# Security Notes:
# ===========================================
# 1. NEVER commit real API keys to version control
# 2. Use environment variables in your deployment platform
# 3. Rotate keys regularly
# 4. Set up usage limits on OpenAI to prevent cost overruns
